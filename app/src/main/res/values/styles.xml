<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="GrayDefault" parent="Theme.Default"/>
    <style name="Theme.Default" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>





    <style name="AlertDialogCustom" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:buttonBarButtonStyle">@style/MyButtonBarButtonStyle</item>
    </style>

    <style name="MyButtonBarButtonStyle" parent="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@android:color/white</item>
    </style>








    <style name="LoadingNormal">
        <item name="android:background">@drawable/qspinner_base</item>
        <item name="android:layout_width">@dimen/loading</item>
        <item name="android:layout_height">@dimen/loading</item>
    </style>






</resources>
