<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/customer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/bg_round_selected"
    app:cardCornerRadius="3dp"
    app:cardElevation="6dp"
    android:layoutDirection="rtl">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:baselineAligned="false">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="2dp"
                android:layout_weight="0.5"
                android:weightSum="0.5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:text="@string/customer_code"
                    android:textSize="12sp"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:id="@+id/customer_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:text="@string/customer_code"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="2dp"
                android:layout_weight="0.5"
                android:weightSum="0.5">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    tools:ignore="NestedWeights"
                    android:gravity="center"
                    android:text="@string/customer_credite"

                    android:textSize="12sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/customer_bes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layoutDirection="rtl"
                    android:text="@string/customer_credite"
                    android:layout_weight="0.25"
                    android:visibility="gone"

                    android:textSize="16sp"

                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="@string/customerfactorheader"
                android:gravity="center"


                android:textSize="12sp" />

            <TextView
                android:id="@+id/customer_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layoutDirection="rtl"
                android:layout_weight="0.25"
                android:text="@string/customerfactorheader"

                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="@string/customer_manager"
                android:gravity="center"


                android:textSize="12sp" />

            <TextView
                android:id="@+id/customer_manage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layoutDirection="ltr"
                android:layout_weight="0.25"

                android:text="@string/customer_manager"

                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="@string/customer_phone"
                android:gravity="center"


                android:textStyle="bold" />

            <TextView
                android:id="@+id/customer_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:layoutDirection="rtl"
                android:text="@string/customer_phone"

                android:textSize="16sp"

                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="@string/customer_addres"
                android:gravity="center"


                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/customer_addres"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layoutDirection="rtl"
                android:layout_weight="0.25"
                android:text="@string/customer_addres"

                android:textSize="16sp"

                android:textStyle="bold" />


        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>


</com.google.android.material.card.MaterialCardView>