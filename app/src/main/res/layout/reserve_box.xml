<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reserve_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5sp"
    android:layoutDirection="rtl">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reserve_box_rstmiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5sp"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"

                android:layout_weight="0.5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:text="@string/reservebox_name"
                    tools:ignore="NestedWeights" />

                <EditText

                    android:id="@+id/reserve_box_personname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.4"
                    android:autofillHints=""
                    android:background="@drawable/bg_round_selected"
                    android:gravity="center"
                    android:hint="@string/reservebox_name"
                    android:textSize="20sp"
                    tools:ignore="TextFields" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"


                android:layout_weight="0.5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:text="@string/reservebox_mobile"
                    tools:ignore="NestedWeights" />

                <EditText

                    android:id="@+id/reserve_box_mobileno"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.4"
                    android:autofillHints=""
                    android:background="@drawable/bg_round_selected"
                    android:gravity="center"
                    android:hint="@string/reservebox_mobile"
                    android:textSize="20sp"
                    tools:ignore="TextFields" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"


                android:layout_weight="0.5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:text="@string/reservebox_explain"
                    tools:ignore="MissingPrefix,NestedWeights" />

                <EditText

                    android:id="@+id/reserve_box_explain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.4"
                    android:autofillHints=""
                    android:background="@drawable/bg_round_selected"
                    android:gravity="center"
                    android:hint="@string/reservebox_explain"
                    android:textSize="20sp"
                    tools:ignore="TextFields" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"


                android:layout_weight="0.5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:text="@string/reservebox_starttime"
                    tools:ignore="NestedWeights" />

                <TextView

                    android:id="@+id/reserve_box_reservestart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.4"
                    android:background="@drawable/bg_round_selected"
                    android:gravity="center"
                    android:hint="@string/reservebox_starttime"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"


                android:layout_weight="0.5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:text="@string/reservebox_endtime"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:id="@+id/reserve_box_reserveend"
                    android:layout_width="match_parent"

                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.4"
                    android:background="@drawable/bg_round_selected"
                    android:gravity="center"
                    android:hint="@string/reservebox_endtime"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"


                android:layout_weight="0.5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:text="@string/reservebox_date"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:id="@+id/reserve_box_date"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.4"
                    android:background="@drawable/bg_round_selected"
                    android:gravity="center"
                    android:hint="@string/reservebox_date"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"


                android:layout_weight="0.5"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/reserve_box_btn_send"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="400dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/reservebox_setreservebtn"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:backgroundTint="#D7BE9F"
                    app:strokeColor="#B96838"
                    app:strokeWidth="1dp" />


            </LinearLayout>

            <TextView
                android:id="@+id/reserve_box_show_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5sp"
                android:background="@color/grey_600"
                android:gravity="center"
                android:text="@string/reservebox_tvlisttitle"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/reserve_box_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:visibility="visible" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>