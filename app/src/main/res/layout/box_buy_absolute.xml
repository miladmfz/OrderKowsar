<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:id="@+id/boxbuy_absolute"
    android:background="@drawable/bg_round_selected"
    android:layoutDirection="rtl">


    <TextView
        android:id="@+id/boxbuy_absolute_factorname"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"

        android:text="@string/customerfactorheader"
        android:textSize="20sp"

        android:focusable="true">


    </TextView>


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_weight="0.5"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/amount"
                android:gravity="center"
                android:layout_weight="0.8" />

            <EditText
                android:id="@+id/boxbuy_absolute_amount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/bg_round_selected"
                android:gravity="center"
                android:hint="@string/amount"
                android:maxLength="4"
                android:inputType="number"
                android:layout_weight="0.4"
                android:focusable="true"
                 />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </LinearLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/boxbuy_price"
            android:gravity="center"
            android:layout_weight="0.95" />

        <EditText
            android:id="@+id/boxbuy_absolute_price"
            android:layout_weight="0.05"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_round_selected"
            android:focusable="true"

            android:gravity="center"
            android:hint="@string/boxbuy_price"
            android:inputType="number"
            android:maxLength="10" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/boxbuy_total"

            android:gravity="center"
            android:layout_weight="0.95" />

        <TextView
            android:id="@+id/boxbuy_absolute_sumprice"
            android:layout_weight="0.05"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_round_selected"
            android:focusable="true"

            android:gravity="center"
            android:textSize="20sp"
            android:hint="@string/boxbuy_total"
            android:maxLength="10" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/boxbuy_hasamount"

            android:gravity="center"
            android:layout_weight="0.95" />

        <TextView
            android:id="@+id/boxbuy_absolute_facamount"
            android:layout_weight="0.05"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_round_selected"
            android:focusable="true"

            android:gravity="center"
            android:textSize="20sp"
            android:hint="@string/boxbuy_hasamount"
            android:maxLength="10" />
    </androidx.appcompat.widget.LinearLayoutCompat>


    <Button
        android:id="@+id/boxbuy_absolute_btn"
        android:layout_width="250dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_height="50dp"
        android:text="@string/detail_buy"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#ffffff"

        app:backgroundTint="@color/green_600"
        app:strokeColor="@color/grey_1000"
        app:strokeWidth="1dp"
        app:icon="@drawable/ic_add_shopping_black"
        app:iconTint="@color/white"
        style="?attr/materialButtonOutlinedStyle"


        />

</androidx.appcompat.widget.LinearLayoutCompat>